SELECT *
FROM vips
LIMIT 5
;

SELECT *
FROM reservations
LIMIT 5
;

SELECT *
FROM events
LIMIT 5
;

SELECT *
FROM hotels
LIMIT 5
;

--1.[LEFT JOIN] - List all the VIPs (last and first name) and any panels they are presenting at.

SELECT vips.last_name
,vips.first_name
,events.event_name
FROM vips
LEFT JOIN events
ON vips.event = events.event_id
WHERE events.event_type = 'Panel'
;

--2. [INNER JOIN] - List the VIPs (last and first name) that made reservations for dinner

SELECT vips.last_name
, vips.first_name
, reservations.dinner_rsvp
FROM vips
INNER JOIN reservations
ON vips.member_id = reservations.member_id
WHERE reservations.dinner_rsvp = 1
;

-- 3. [Multiple JOINs] – List the VIPs (last and first name) that are booked for an event. List their association type, event name, event type, hotel and hotel address.

SELECT vips.last_name
, vips.first_name
, vips.assoc_type
, events.event_name
, events.event_type
, hotels.hotel_name
, hotels.address
FROM vips
INNER JOIN events
ON vips.event = events.event_id
LEFT JOIN reservations
ON vips.member_id = reservations.member_id
LEFT JOIN hotels
ON reservations.hotel = hotels.hotel_id
;

-- 4. [SELF JOIN] – List the VIPs that are mentors and to whom? Sort by tenure.

SELECT A.last_name AS mentor_last_name
, A.first_name AS mentor_first_name
, A.member_since
, B.last_name AS mentee_last_name
, B.first_name AS mentee_first_name
FROM vips AS A
INNER JOIN vips AS B
ON A.member_id = B.provides_feedback_to
ORDER BY A.member_since
;

-- 5. [FULL JOIN] – Who, from the education sector, has a hotel booked?

SELECT vips.member_id
, vips.last_name
, vips.first_name
, vips.assoc_type
, reservations.hotel
FROM vips
FULL JOIN reservations
ON vips.member_id = reservations.member_id
WHERE vips.assoc_type = 'education'
ORDER BY reservations.hotel
;

-- 6. [Multiple JOINs] – Who, from the government sector, has RSVP’d for the Welcome Party, and are also booked at the Four Season’s Hotel? List the VIPs Last and First Name, Association Type, Welcome RSVP and Hotel Name.

SELECT vips.member_id
, vips.last_name
, vips.first_name
, vips.assoc_type
, reservations.welcome_rsvp
, hotels.hotel_name
FROM vips
LEFT JOIN reservations
ON vips.member_id = reservations.member_id
	LEFT JOIN hotels
    ON hotels.hotel_id = reservations.hotel
WHERE hotels.hotel_id = 3 
AND vips.assoc_type = 'government'
;
